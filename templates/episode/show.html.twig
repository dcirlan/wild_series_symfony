{% extends 'base.html.twig' %}

{% block title %}Episode{% endblock %}

{% block body %}
    <h1>Episode</h1>

    <table class="table">
        <tbody>
             <tr>
                <th>Title</th>
                <td>{{ episode.title }}</td>
            </tr>
            <tr>
                <th>Number</th>
                <td>{{ episode.number }}</td>
            </tr>
            <tr>
                <th>Synopsis</th>
                <td>{{ episode.synopsis }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('episode_index') }}" class="btn btn-primary">Revenir à la liste des épisodes</a>

    <a href="{{ path('episode_edit', {'id': episode.id}) }}" class="btn btn-primary">Éditer cet épisode</a>

    {{ include('episode/_delete_form.html.twig') }}
{% endblock %}
