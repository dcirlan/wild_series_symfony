{% extends 'base.html.twig' %}

{% block title %}All programs{% endblock %}

{% block body %}
    <h1>Toutes les catégories de la table catégorie : </h1>
    {% for category in categories %}
        <div>
            <h2> - Catégorie : {{ category.name }}</h2>
            <a href="{{ path("category_show", { categoryName: category.name }) }}">Voir la catégorie</a>
        </div>
    {% else %}
        Aucune catégorie trouvée.
    {% endfor %}

    <a href="{{ path('app_index') }}">
        Retour à l'accueil
    </a>
    <a href="{{ path('category_new') }}">
        Ajouter une nouvelle catégorie
    </a>
{% endblock %}